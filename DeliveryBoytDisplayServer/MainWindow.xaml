<Window x:Class="DeliveryBoyt.DisplayServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeliveryBotyDisplayServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,5">
            <Label Content="Bot Token:"/>
            <TextBox x:Name="TokenTextBox" HorizontalAlignment="Left" Width="200" />
            <Button Content="Save Token" HorizontalAlignment="Left" Click="Button_Click" Margin="10,0" Padding="10,0"/>
            <Label Content="For safety, the current value is not loaded in this text box." Foreground="#FF959191"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,5">
            <Button Content="Initiate bot" HorizontalAlignment="Left" Margin="10,0" Padding="10,0" Height="25" Click="Button_Click_1"/>
        </StackPanel>
    </StackPanel>
</Window>
